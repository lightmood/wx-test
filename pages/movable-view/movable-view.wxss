/* pages/movable-view/movable-view.wxss */
.hidden,
.none {
    display: none !important;
}

.moveable_row {
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 100;
}

.moveable_row .edit_row {
    box-shadow: 0 0 12px rgba(0, 0, 0, .2)
}

.moveable_row .edit_row_show {
    box-shadow: 0 30rpx 30rpx 0 rgba(0, 0, 0, 0.12);
}

.dragSelected {
    background-color: #999 !important;
}

.item {
    height: 50px; 
    line-height: 50px; 
    width: 750rpx; 
    text-align: center;
    background: #fff;
    border-bottom: 1px #eee solid;
}

.item:first-child{
    border-top: 1px #eee solid;
}

.item-header, .item-footer {
    height: 50px;
    line-height: 50px;
    width: 750rpx;
    text-align: center;
}